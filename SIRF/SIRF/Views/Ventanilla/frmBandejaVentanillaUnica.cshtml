@using SIRF.Mensajes
<div class="panel panel-primary text-center">
    <div class="panel-heading text-center">
        <h4>@MsnVentanilla.PERIODOPAGO</h4>
    </div>
    <div class="panel-body">
        <div class="panel panel-default">
            <div class="panel-heading" style="height: 20px;">
                <div class="col-md-12">
                    <button type="button" id="btnSalir" class="btn btn-default btn-sm  pull-right tooltips col-sm-1"
                            data-toggle="tooltip"
                            style="margin-right: 5px"
                            onclick="btnSalir_Click">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                    <button type="button" id="btnExportarEXCEL" class="btn btn-success btn-sm  pull-right tooltips col-sm-1"
                            style="margin-right: 5px"
                            onclick="btnExportarEXCEL_Click">
                        <span class="glyphicon glyphicon-list-alt"></span>
                    </button>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    <div class="col-sm-6">
                        <div class="col-md-12">
                            <label class="control-label col-sm-4 text-left" for="ddlTipoSolicitud" id="lblTipoSolicitud" runat="server">
                                @MsnVentanilla.TIPOSOLICITUD
                            </label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <div class="input-group-addon input-sm">
                                        <i class="glyphicon glyphicon-flag glyphicon-sm"></i>
                                    </div>
                                    <select id="ddlTipoSolicitud" onchange="CargarSolicitudes();" class="form-control input-sm"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="col-md-12">
                            <label class="control-label col-sm-4 text-left" for="txtFechaInicial" runat="server" id="lblPeriodo">
                                @MsnVentanilla.PERIODO
                            </label>
                            <div class="controls col-sm-8">
                                <input type="text" id="txtPeriodo"
                                       class="form-control col-sm-9" maxlength="20" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="col-md-12">
                            <label class="control-label col-sm-4 text-left" for="ddlEstatus" runat="server" id="lblEstatus">
                                @MsnVentanilla.ESTATUS
                            </label>
                            <div class="controls col-sm-8">
                                <div class="input-group">
                                    <div class="input-group-addon input-sm">
                                        <i class="glyphicon glyphicon-flag glyphicon-sm"></i>
                                    </div>
                                    <select id="ddlEstatus" onchange="CargarSolicitudes();"
                                            class="form-control input-sm"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="col-md-12">
                            <label class="control-label col-sm-4 text-left" for="txtNumeroExpediente" runat="server" id="lblNumeroExpediente">
                                @MsnVentanilla.FOLIO
                            </label>
                            <div class="controls col-sm-8">
                                <div class="input-group">
                                    <div class="input-group-addon input-sm">
                                        <i class="glyphicon glyphicon-file glyphicon-sm"></i>
                                    </div>
                                    <input type="text" id="txtFolio"
                                           class="form-control col-sm-9" maxlength="20" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="col-md-12">
                            <label class="control-label col-sm-2 text-left" for="ddlUniAdministrariva" runat="server" id="lblUniAdministrativa" visible="true">
                                @MsnVentanilla.UNIDADADMIN
                            </label>
                            <div class="controls col-sm-10">
                                <div class="input-group">
                                    <div class="input-group-addon input-sm">
                                        <i class="glyphicon glyphicon-flag glyphicon-sm"></i>
                                    </div>
                                    <select id="ddlUniAdministrativa" onchange="CargarSolicitudes();"
                                            class="form-control input-sm"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="col-md-12">
                            <label class="control-label col-sm-4 text-left" for="ddlRegion" runat="server" id="lblRegion" visible="true">
                                @MsnVentanilla.REGION
                            </label>
                            <div class="controls col-sm-8">
                                <div class="input-group">
                                    <div class="input-group-addon input-sm">
                                        <i class="glyphicon glyphicon-flag glyphicon-sm"></i>
                                    </div>
                                    <select id="ddlRegion" onchange="CargarSolicitudes();"
                                            class="form-control input-sm"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="col-md-12">
                            <label class="control-label col-sm-4 text-left" for="ddlTipoFirma" runat="server" id="lblTipoFirma" visible="true">
                                @MsnVentanilla.TIPOFIRMA
                            </label>
                            <div class="controls col-sm-8">
                                <div class="input-group">
                                    <div class="input-group-addon input-sm">
                                        <i class="glyphicon glyphicon-flag glyphicon-sm"></i>
                                    </div>
                                    <select id="ddlTipoFirma" onchange="CargarSolicitudes();"
                                            class="form-control input-sm"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-sm-12">
                <div id="divBusqueda" class="col-md-12">
                    <div class="col-sm-12" style="position: inherit">
                        <div class="scrolling-table-container" id="SeccionResultadosDiv">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(document).ready(function() {
        CargaInicial();
    });

    function CargaInicial() {
        CargaSolicitud();
        CargaRegion();
        CargaEstatus();
        CargaUnidadAdm();
        CargaFirma();
    }

    function CargaSolicitud() {
        EjecutaAjax("../Ventanilla/CargaSolicitud", null, null, "ddlTipoSolicitud");
    }

    function CargaRegion() {
        EjecutaAjax("../Ventanilla/CargaRegion", null, null, "ddlRegion");
    }

    function CargaEstatus() {
        EjecutaAjax("../Ventanilla/CargaEstatus", null, null, "ddlEstatus");
    }

    function CargaUnidadAdm() {
        EjecutaAjax("../Ventanilla/CargaUnidadAdm", null, null, "ddlUniAdministrativa");
    }

    function CargaFirma() {
        EjecutaAjax("../Ventanilla/CargaFirma", null, null, "ddlTipoFirma");
    }

    function CargarSolicitudes() {
        var modelo = {
            tipoSolicitud_int: $("#ddlTipoSolicitud").val(),
            estatus_int: $("#ddlEstatus").val(),
            region_int: $("#ddlRegion").val(),
            tipoFirma_int: $("#ddlTipoFirma").val(),
            uniAdministrativa_int: $("#ddlUniAdministrativa").val(),
            periodo: $("#txtPeriodo").val(),
            FolioSolicitud: $("#txtFolio").val()
        };
        EjecutaAjax("../Ventanilla/frmCargarSolicitudes", modelo, null, "SeccionResultadosDiv");
    }

</script>