<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

<div class="modal fade" id="TipoSolicitudRec" tabindex="1" role="dialog" data-backdrop="static" aria-labelledby="myModalLabel2" aria-hidden="true">
    <input type="text" ID="Seleccionado" class="hidden"/>
    <div class="modal-dialog">
        <div class="alert alert-danger" id="AlertaInformacion" style="display: none;">
            <strong>
                <label ID="lblTituloInfo">@SIRF.Mensajes.Constantes.TitSolicitudRecursos</label>
            </strong>
            <br />
            <label ID="lblMsnInfo">@SIRF.Mensajes.Mensajes.MsgTipoSolicitud</label>
        </div>
        <div class="modal-content">
            <div class="modal-header"
                 style="padding: 9px 15px; border-bottom: 1px solid #eee; background-color: #31708f; -webkit-border-top-left-radius: 5px; -webkit-border-top-right-radius: 5px; -moz-border-radius-topleft: 5px; -moz-border-radius-topright: 5px; border-radius: 5px; color: white;">
                <div class="row">
                    <h4 class="panel-title pull-left col-sm-9" id="lblTitulo">
                        @SIRF.Mensajes.Constantes.TitSolicitudRecursos
                    </h4>
                    <div class="col-sm-3">
                        <div class="btn-block pull-right col-sm-1|">
                            <button type="button"
                                    id="LinkButton1" class="btn btn-default btn-sm pull-right tooltips"
                                    data-toggle="tooltip"
                                    style="margin-right: 5px;"
                                    onclick="CerrarModalViatico();">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="ddlTipoSolicitud">
                            @SIRF.Mensajes.Constantes.lblTipoSolicitud
                        </label>
                        <div class="controls col-sm-8">
                            <select id="ddlTipoSolicitud" onchange="RenderVista();" class="form-control"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">


    $(document).ready(function() {
        RenderTipoSolicitud();
    });

    function RenderTipoSolicitud() {
        EjecutaAjax("../Solicitud/RenderTipoSolicitud", null, null, "ddlTipoSolicitud");
        $("#TipoSolicitudRec").modal("show");
    }

    function RenderVista() {
        $('#TipoSolicitudRec').hide();
        $('#TipoSolicitudRec').modal('hide');
        $(".modal-backdrop").remove();
        modelo = { Valor: $("#ddlTipoSolicitud").val() }
        EjecutaAjax("../Solicitud/ddlTipoSolicitud_SelectedIndexChanged", modelo, redirect);
    }

</script>
